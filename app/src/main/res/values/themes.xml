<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Splash.Theme.OffLine_HouseholdBook" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- 기본 테마 -->
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/black</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">
            @drawable/household_app_icon
        </item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="s">5000</item>
        <item name="postSplashScreenTheme">@style/Theme.OffLine_HouseholdBook</item>
    </style>

    <style name="Theme.OffLine_HouseholdBook" parent="Theme.Material3.DayNight.NoActionBar">

    </style>

    <style name="Theme.OffLine_HouseholdBook.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.OffLine_HouseholdBook.AppWidgetContainer" parent="Theme.OffLine_HouseholdBook.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>
</resources>