<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
    Having themes.xml for v31 variant because @android:dimen/system_app_widget_background_radius
     and @android:dimen/system_app_widget_internal_padding requires API level 31
    -->
    <style name="Theme.OffLine_HouseholdBook.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault.DayNight">
        <item name="appWidgetRadius">@android:dimen/system_app_widget_background_radius</item>
        <item name="appWidgetInnerRadius">@android:dimen/system_app_widget_inner_radius</item>
    </style>

    <style name="Theme.OffLine_HouseholdBook" parent="Theme.Material3.DayNight.NoActionBar">
    </style>

    <style name="Splash.Theme.OffLine_HouseholdBook" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- 기본 테마 -->
        <item name="android:windowSplashScreenBackground">@color/black</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/household_app_icon</item>
        <item name="android:windowSplashScreenAnimationDuration">5000</item>
        <item name="postSplashScreenTheme">@style/Theme.OffLine_HouseholdBook</item>
    </style>


</resources>